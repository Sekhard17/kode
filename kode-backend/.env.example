# Server
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database (Supabase)
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Flow (Pagos)
FLOW_API_KEY=your-flow-api-key
FLOW_SECRET_KEY=your-flow-secret-key
FLOW_ENV=sandbox
# FLOW_ENV=production

# Maileroo (Emails)
MAILEROO_API_KEY=your-maileroo-api-key
MAILEROO_DOMAIN=your-domain.com
MAILEROO_FROM_EMAIL=noreply@your-domain.com
MAILEROO_FROM_NAME=KODE

# Supabase Storage
SUPABASE_URL=https://[PROJECT_REF].supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_STORAGE_BUCKET=product-images
